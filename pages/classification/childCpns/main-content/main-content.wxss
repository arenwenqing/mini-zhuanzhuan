/* pages/classification/childCpns/main-content/main-content.wxss */
.container {
  margin-top: 20rpx;
}
.goods-item {
  display: flex;
  width: 526rpx;
  height: 168rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  justify-content: space-between;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #E5E5E5;
}
.goods-item-left {
  display: flex;
  align-items: center;
  /* margin-left: 20rpx; */
}
.goods-item-image {
  display: inline-block;
  width: 158rpx;
  height: 151rpx;
  border-radius: 10rpx;
}
.goods-item-name {
  display: flex;
  flex-direction: column;
  /* padding-top: 4rpx; */
}
.goods-item-name-price {
  display: flex;
  width: 190rpx;
  height: 100%;
  margin-left: 16rpx;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item-name-title {
  display: inline-block;
  /* width: 246rpx; */
  font-size: 20rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #262424;
  line-height: 28rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
 -webkit-box-orient: vertical;
}
.goods-item-name-num {
  /* font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999393;
  line-height: 32rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
  width: 72rpx;
  height: 22rpx; */
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999393;
  margin-top: 8rpx;
  line-height: 22rpx;
}
.goods-item-price-value {
  display: flex;
  align-items: center;
  /* margin-bottom: 8rpx; */
}
.goods-item-price1 {
  font-size: 24rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FF0C00;
  line-height: 44rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
}
.goods-item-price2 {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FF0C00;
  line-height: 50rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
}
.goods-item-time {
  display: flex;
  align-items: center;
}
.goods-item-time-icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
}
.goods-item-time-time1 {
  display: inline-block;
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5F5F5F;
  line-height: 32rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
  margin: 0 10rpx 0 8rpx;
}
.goods-item-time-time2 {
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5F5F5F;
  line-height: 32rpx;
  text-shadow: 0rpx 4rpx 8rpx rgba(0, 0, 0, 0.03);
}
.goods-item-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.goods-item-right-content {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item-right-num-people-wrapper {
  display: flex;
  justify-content: flex-end;
}
.goods-item-right-num-people {
  /* width: 82rpx; */
  padding: 0 8rpx;
  height: 22rpx;
  background: linear-gradient(135deg, #FDAE02 0%, #FE8024 100%);
  border-radius: 3rpx;
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 22rpx;
  text-align: center;
}
.goods-item-red-icon {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}
.goods-item-right-red {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  justify-content: flex-end;
}
.goods-item-right-top {
  width: 128rpx;
}
.goods-item-right-red-num {
  font-size: 16rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FF0000;
  line-height: 22rpx;
}
.goods-item-right-coupons {
  width: 128rpx;
  height: 48rpx;
  background: #FEAA32;
  border-radius: 36rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Heavy, PingFang-SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48rpx;
  text-align: center;
  margin-bottom: 10rpx;
}
.goods-item-right-now {
  width: 128rpx;
  height: 48rpx;
  background: #FA2840;
  border-radius: 36rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Heavy, PingFang-SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 48rpx;
  text-align: center;
}
.goods-img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 168rpx;
  height: 168rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}