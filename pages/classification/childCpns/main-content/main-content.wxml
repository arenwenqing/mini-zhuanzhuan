<!--pages/classification/childCpns/main-content/main-content.wxml-->
<view class="container">
  <block wx:for="{{datalist}}" wx:key="index">
    <mp-dialog title="您还未登录" bindbuttontap="closeAddressTip" buttons="{{buttonArray}}" mask="true" mask-closable="false" show="{{deleteDialog}}"></mp-dialog>
    <view class="goods-item" data-name="{{item.majorName}}" data-productid="{{item.productId}}" bindtap="skipDetail">
      <view class="goods-item-left">
        <view class="goods-img">
          <image class="goods-item-image" src="{{item.headPhotoAddress[0]}}"></image> 
          <image class="goods-item-active" wx:if="{{item.isBlindBox === 1}}" src="https://cdn.tuanzhzh.com/image/img-mark2.png"></image>
        </view>
        <view class="goods-item-name-price">
          <view class="goods-item-name">
            <text class="goods-item-name-title">{{item.majorName}}</text>
            <text class="goods-item-name-num">库存{{item.stock}}</text>
            <view class="list-item-tags">
              <view class="tag-item" wx:for="{{item.productLabelList}}" wx:key="index" wx:for-item="itemData">
                <text class="tag-item-text">{{itemData}}</text>
              </view>
            </view>
          </view>
          <view class="goods-item-price">
            <view class="goods-item-price-value">
              <text>￥</text>
              <!--{{item.price}}-->
              <text>{{item.price}}.</text>
              <text>{{item.priceDot}}</text>
              <text>￥</text>
              <text>{{item.marketPrice}}</text>
            </view>
            <view class="goods-item-time">
              <text>团团转价（{{item.discount}}折）</text>
              <text>市场价格</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>
  <!-- <dialog showDialog="{{showDialog}}"></dialog> -->
</view>
