/**index.wxss**/
.my-page-navigation {
  z-index: 333;
  position: relative;
}
.index-top-bar {
  width: 100vw;
  height: 176rpx;
  background-image: url('https://cdn.tuanzhzh.com/top_bg1.png');
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-bar-title {
  color: #fff;
  position: relative;
  top: 30rpx;
}
.container {
  background: linear-gradient(180deg, #FFF8EF 0%, #FFDCD3 100%);
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  overflow-y: auto;
}
.container-top {
  width: 100vw;
  height: 224rpx;
  background-image: url('https://cdn.tuanzhzh.com/top_bg2.png');
  background-repeat: no-repeat;
  background-size: cover;
  border: none;
}
.container-title {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  display: inline-block;
  margin-top: 70rpx;
}

.swiper-wrapper {
  width: 710rpx;
  margin: 0 auto;
  margin-top: -121rpx;
  height: auto;
  position: relative;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(61, 3, 0, 0.37);
}

.swiper-item-wrapper {
  background: red;
  border-radius: 24rpx;
}

.swiper-image {
  display: block;
  width: 710rpx;
  height: 276rpx;
}

/*用来包裹所有的小圆点  */
.dots{  
  width: 156rpx;
  height: 36rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 320rpx;
  bottom: -40rpx;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 12rpx;  
  height: 12rpx;   
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #FFB5A3;
}  
/*选中以后的小圆点样式  */
.active{  
  width: 12rpx;   
  height: 12rpx;
  background-color: #FA2840;
}
.container-search-wrapper {
  width: 710rpx;
  margin: 40rpx auto 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  overflow: hidden;
}
.container-receive-wrapper {
  height: 60rpx;
  width: 365rpx;
}
.receive-item {
  display: flex;
  align-items: center;
  height: 100%;
}
.receive-swiper {
  height: 70rpx !important;
}

.receive-image {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.receive-name {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #262424;
  line-height: 34rpx;
  display: inline-block;
  margin: 0 16rpx 0 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 160rpx;
  overflow: hidden;
}
.receive-text {
  display: inline-block;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5F5F5F;
  line-height: 34rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 200rpx;
  overflow: hidden;
}
.container-serch-content {
  display: flex;
  width: 300rpx;
  height: 57rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  border: 1rpx solid #DBDBDB;
  align-items: center;
}
.search-icon {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin: 14rpx 8rpx 14rpx 20rpx;
}
.search-placholder {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #B1B1B1;
}
.tabbar-map-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
}