<!--index.wxml-->
<view class="container">
  <navigationBar></navigationBar>
  <view class="container-top">
    <view class="container-search-wrapper">
      <view class="container-receive-wrapper">
        <swiper class="receive-swiper" autoplay='true' interval='3000'  duration='1000' circular='true' vertical='true' >
          <block wx:for="{{receiveDatas}}" wx:key="index">
            <swiper-item>
              <view class="receive-item">
                <text class="receive-name">{{ item.payUsername }}</text>
                <text class="receive-text">刚刚领取了{{ item.cashback }}元</text>
              </view>
            </swiper-item>
          </block>
        </swiper>
      </view>
    </view>
    <view class="index-search-wrapper">
      <image class="index-search-icon" src='../images/search-index-icon.png' />
      <view class="index-search" bindtap="goSearch" disabled="{{true}}" confirm-type="search" selection-start="60" placeholder-class='index-search-placeholder'>
        <text class="index-search-text">搜索商品</text>
      </view>
    </view>
  </view>
  <scroll-view
    scroll-y="true"
    bindscrolltolower="lower"
    style="{{'height:' +  contentHeight}}"
    lower-threshold="60"
    scroll-top="{{scrollTop}}"
    scroll-with-animation="{{true}}"
    scroll-anchoring="{{true}}"
    refresher-enabled="{{true}}"
    bindrefresherrefresh="onPullFresh"
    refresher-triggered="{{triggered}}"
  >
    <view  class="home-content-wrapper">
      <view class="home-content-top"></view>
      <!--轮播图 indicator-dots='false'-->
      <view class="swiper-wrapper">
        <swiper  current='currentSwiper' indicator-active-color='#FA2840' autoplay='true' interval='3000'  duration='1000' circular='true' bindchange="swiperChange">
          <block wx:for="{{movies}}" wx:key="index">
            <swiper-item class="swiper-item-wrapper">
              <image class="swiper-image" bindtap="skipBannerDetail" data-value="{{item.value}}" src='{{item.name}}' mode='aspectFill'></image> 
            </swiper-item>
          </block>
        </swiper>
        <view class="dots">  
            <block wx:for="{{movies}}" wx:key="index">  
              <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view>  
            </block>  
        </view>
      </view>
      <view class="venue-goods-wrapper venue-goods-top">
        <view class="venue-goods-top-left" data-id="1" data-sectionId="{{zoneData[0].sectionId}}" bindtap="goVenueZone">
          <image src='https://cdn.tuanzhzh.com/image/pinpaizhekou.png' class="venue-bg-style"></image>
          <view class="venue-goods-title-wrapper">
            <view class="venue-goods-title-icon"></view>
            <text class="venue-goods-title">{{zoneData[0].sectionName}}</text>
          </view>
          <view class="venue-goods-list">
            <view class="venue-goods-list-item" wx:for="{{zoneData[0].productList}}"  wx:key="index">
              <image src='{{item.headPhotoAddress[0]}}'></image>
              <!-- <view class="venue-mark-icon-style">
                <text>最低三折</text>
              </view> -->
            </view>
          </view>
        </view>
        <view class="venue-goods-top-right" data-id="2" data-sectionId="{{zoneData[1].sectionId}}" bindtap="goVenueZone">
          <image src='https://cdn.tuanzhzh.com/image/lasanmianyi.png' class="venue-bg-style"></image>
          <view class="venue-goods-title-wrapper">
            <view class="venue-goods-title-icon2"></view>
            <text class="venue-goods-title">{{zoneData[1].sectionName}}</text>
          </view>
          <view class="venue-goods-list">
            <view class="venue-goods-list-item" wx:for="{{zoneData[1].productList}}"  wx:key="index">
              <image src='{{item.headPhotoAddress[0]}}'></image>
              <!-- <view class="venue-mark-icon-style">
                <text>最低三折</text>
              </view> -->
            </view>
          </view>
        </view>
      </view>
      <view class="venue-goods-wrapper venue-goods-bottom" data-id="3" data-sectionId="{{zoneData[2].sectionId}}" bindtap="goVenueZone">
        <image src='https://cdn.tuanzhzh.com/image/red-fanli.png' class="venue-bg-style"></image>
        <view class="venue-goods-title-wrapper">
          <view class="venue-goods-title-icon3"></view>
          <text class="venue-goods-title">{{zoneData[2].sectionName}}</text>
        </view>
        <view class="venue-goods-list">
          <view class="venue-goods-list-item" wx:for="{{zoneData[2].productList}}"  wx:key="index">
            <image src='{{item.headPhotoAddress[0]}}'></image>
            <!-- <view class="venue-mark-icon-style">
              <text>最低三折</text>
            </view> -->
          </view>
        </view>
      </view>
      <home-list dataObj="{{listData}}" identity="{{identity}}" class="home-list-component-style"></home-list>
      <view class="bottom-loading-tip {{showBottomTip ? '' : 'hide'}}">
        <text>-已到头啦-</text>
      </view>
    </view>
  </scroll-view>
  <view class="back-top-style {{showBottomTip ? '' : 'hide'}}" bindtap="goTop">
    <image src='https://cdn.tuanzhzh.com/image/go-top.png'></image>
  </view>
</view>
