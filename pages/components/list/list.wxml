<!--pages/components/list/list.wxml-->
<view class="container-goods-wrapper">
  <scroll-view class="scroll-view-style" lower-threshold="50" scroll-y="true" scroll-anchoring="true" bindscrolltolower="scrollBottom">
    <block wx:for="{{listData}}" wx:key="index">
      <view class="goods-item" data-name="{{item.majorName}}" data-productid="{{item.productId}}" bindtap="skipDetail">
        <view class="goods-item-left">
          <view class="goods-img">
            <image class="goods-item-image" src="{{item.headPhotoAddress[0]}}"></image> 
            <!-- <image wx:if="{{item.isBlindBox}}" class="goods-item-active" src="https://cdn.tuanzhzh.com/image/img-mark2.png"></image> -->
          </view>
          <view class="goods-item-name-price">
            <view class="goods-item-name">
              <text class="goods-item-name-title">{{item.majorName}}</text>
              <text class="goods-item-name-num">库存{{item.stock}}</text>
              <view class="list-item-tags">
                <view class="tag-item" wx:for="{{item.productLabelList}}" wx:key="index" wx:for-item="itemData">
                  <text class="tag-item-text" style="background: {{itemData.labelColor}};">{{itemData.labelName}}</text>
                </view>
              </view>
            </view>
            <view class="goods-item-price">
              <view class="goods-item-price-value">
                <text>￥</text>
                <!--{{item.price}}-->
                <text wx:if="{{identity === 2}}">{{item.price}}.</text>
                <text wx:else>{{item.preferentialPrice}}.</text>
                <text wx:if="{{identity === 2}}">{{item.priceDot}}</text>
                <text wx:else>{{item.preferentialPriceDot}}</text>
                <!-- <text>￥</text>
                <text>{{item.marketPrice}}</text> -->
              </view>
              <!-- <view class="goods-item-time">
                <text>团团转价（{{item.discount}}折）</text>
                <text>市场价格</text>
              </view> -->
            </view>
          </view>
        </view>
      </view>
    </block>
  </scroll-view>
</view>
