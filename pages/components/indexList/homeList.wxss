/* pages/components/homeList/homeList.wxss */
.home-list-wrapper {
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  /* padding-top: 55rpx; */
  flex-direction: row;
  flex-wrap: wrap;
}
.left {
  width: 348rpx;
}
.right {
  width: 348rpx;
}
.list-item {
  width: 348rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 16px 0px rgba(255, 49, 49, 0.06);
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 16rpx;
  float: left;
}
.list-item-img-wrapper {
  position: relative;
  width: 348rpx;
  height: 348rpx;
}
.goods-item-image {
  display: inline-block;
  width: 348rpx;
  height: 348rpx;
}
.goods-red-mark {
  display: inline-block;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 64rpx;
  width: 348rpx;
}
.list-item-goods-title {
  margin: 12rpx 0;
}
.goods-title {
  display: block;
  width: 316rpx;
  margin: 0 auto;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #262424;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-item-tags {
  width: 326rpx;
  display: flex;
  align-items: center;
  margin: 8rpx auto;
}
.tag-item:nth-child(1) {
  height: 32rpx;
  background: linear-gradient(86deg, #FF706B 0%, #F8052B 100%);
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(255, 49, 49, 0.06);
  border-radius: 4rpx;
  line-height: 35rpx;
  margin-right: 12rpx;
  display: inline-flex;
  align-items: center;
}
.tag-item:nth-child(2) {
  height: 32rpx;
  background: linear-gradient(86deg, #FFC06B 0%, #FF6F12 100%);
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(255, 49, 49, 0.06);
  border-radius: 4rpx;
  line-height: 35rpx;
  margin-right: 12rpx;
  display: inline-flex;
  align-items: center;
}
.tag-item:nth-child(3) {
  height: 32rpx;
  background: linear-gradient(90deg, #7CC43D 0%, #53B231 100%);
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(255, 49, 49, 0.06);
  border-radius: 4rpx;
  line-height: 35rpx;
  margin-right: 12rpx;
  display: inline-flex;
  align-items: center;
}
.tag-item-text {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
  padding: 0 8rpx;
}
.list-item-price {
  width: 316rpx;
  margin: 0 auto 16rpx;
  display: flex;
  justify-content: space-between;
}
.price-left {
  margin-right: 16rpx;
}
.current-price-style:nth-child(1) {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #DD0A00;
  line-height: 50rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.current-price-style:nth-child(2) {
  font-size: 60rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #DD0A00;
  line-height: 84rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.current-price-style:nth-child(3)  {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #DD0A00;
  line-height: 50rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.current-price-text {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #DD0A00;
  line-height: 28rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.old-price-style-dollar {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #BBBBBB;
  line-height: 40rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.old-price-style {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #BBBBBB;
  line-height: 40rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
  text-decoration: line-through;
}
.old-price-text {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #BBBBBB;
  line-height: 28rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.old-price-wrapper {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.price-right {
  margin-top: 25rpx;
}
.price-right text {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999393;
  line-height: 28rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
}
.top-mark-icon {
  position: absolute;
  width: 96rpx;
  height: 36rpx;
  background: url('https://cdn.tuanzhzh.com/image/top-mark-icon.png');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  top: 8rpx;
  left: -3rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-mark-icon text {
  font-size: 20rpx;
  font-family: PingFang-SC-Heavy, PingFang-SC;
  font-weight: 800;
  color: #FFFFFF;
  line-height: 28rpx;
}
.goods-item-bottom-tuan-zhang {
  width: 348rpx;
  height: 64rpx;
  position: absolute;
  top: 290rpx;
}
.goods-item-bottom-tuan-zhang image {
  width: 348rpx;
  height: 64rpx;
}
.goods-item-bottom-tuan-zhang text {
  position: absolute;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2E2B28;
  line-height: 34rpx;
  text-shadow: 0rpx 0rpx 16rpx rgba(255, 49, 49, 0.06);
  right: 72rpx;
  top: 25rpx;
}