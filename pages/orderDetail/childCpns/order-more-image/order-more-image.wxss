/* pages/orderDetail/childCpns/order-more-image/order-more-image.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.top-img-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}
.content-wrapper {
  width: 200rpx;
  height: auto;
  border: 1rpx solid #F7F7F7;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
  margin: 0rpx auto;
}
.top-img {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(86deg, #FF706B 0%, #F8052B 100%);
  border-radius: 11rpx;
}
.top-img-desc {
  display: inline-block;
  width: 200rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #262424;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 6rpx;
  text-align: center
}
.double-wrapper {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  right: 53rpx;
}
.double-img {
  width: 120rpx;
  height: 120rpx;
}
.bottom-img-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 20rpx 0rpx;
}
.detail-img-content {
  display: flex;
  flex-direction: column;
  margin: 0rpx 20rpx;
  border: 1rpx solid #F7F7F7;
  border-radius: 5rpx;
  padding: 5rpx 10rpx;
}
.detail-img {
  width: 160rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 8rpx; 
}
.detail-img-desc {
  display: inline-block;
  width: 160rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #262424;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
  text-align: center
}