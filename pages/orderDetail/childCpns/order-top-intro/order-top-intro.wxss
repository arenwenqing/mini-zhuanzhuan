/* pages/orderDetail/childCpns/order-top-intro/order-top-intro.wxss */
.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 200rpx;
  padding: 24rpx 0rpx 20rpx 0rpx;
  margin: 0rpx 24rpx;
  border-bottom: 2rpx solid #EBEBEB;
}
.order-image {
  width: 200rpx;
  height: 200rpx;
  background: #D8D8D8;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.order-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-between;
}
.order-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #262424;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.order-price-num {
  display: flex;
  justify-content: space-between;
}
.order-price {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #1A1A1A;
  line-height: 44rpx;
}
.order-num {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #333333;
  line-height: 34rpx;
  margin-top: 10rpx;
}
.order-current-status {
  border-radius: 4rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 32rpx;
  margin-right: 8rpx;
}
.status {
  background: #FFEEED;
  border: 1rpx solid #F2E2E1;
  color: #FF5951;
  padding: 0rpx 10rpx;
}
.deliver-time {
  background: #F6F6F6;
  color: #999393;
  border: 1rpx solid #EBEBEB;
  padding: 0rpx 6rpx;
}