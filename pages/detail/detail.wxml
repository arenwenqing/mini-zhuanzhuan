<!--pages/detail/detail.wxml-->
<view class="detail-wrapper">
  <mp-navigation-bar title="{{title}}" background="#fff" back='true' ext-class='detail-top-bar' bindback="bindbackFun"></mp-navigation-bar>
  <mp-dialog title="您还未登录" bindbuttontap="closeAddressTip" buttons="{{buttonArray}}" mask="true" mask-closable="false" show="{{deleteDialog}}"></mp-dialog>
  <zero-task-dialog showDialog="{{sureStartTaskDialog}}"></zero-task-dialog>
  <view class="detail-swiper-view">
      <swiper class="detail-image-carousel" indicator-active-color='#FA2840' indicator-color="#c1c1c1" indicator-dots='true' autoplay='true' interval='3000'  duration='1000' circular='true' >
        <block wx:for="{{carousel}}" wx:key="index">
          <swiper-item>
            <image src="{{item}}" mode="scaleToFill" class="detail-main-image"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
  <!-- <view class="detail-main-image-wrapper">
    <image src="{{detailData.photoAddress && detailData.photoAddress[0]}}" mode="scaleToFill" class="detail-main-image"></image>
  </view> -->
  <view class="detail-name-price-wrapper">
    <view class="detai-name-price-content">
      <view class="detail-price">
        <view class="detail-current-price">
          <text>￥</text>
          <text>{{detailData.price}}.</text>
          <!-- <text>{{detailData.price}}</text> -->
          <text>{{detailData.priceDot}}</text>
          <text wx:if="{{identity === 1}}">最终优惠价格{{detailData.preferentialPrice}}元</text>
          <text wx:else>最高佣金{{detailData.maxCommission}}元</text>
        </view>
        <!-- <view class="detail-old-price">
          <text>￥</text>
          <text>{{detailData.marketPrice}}</text>
          <text>市场价格</text>
        </view> -->
      </view>
      <view class="detail-main-title">
        {{detailData.majorName}}
      </view>
      <view class="detail-subtitle-title">{{detailData.minorName}}</view>
      <view class="detail-num">
        <view class="detail-num-content">
          <text>库存：{{detailData.stock}}</text>
        </view>
        <view class="detail-goods-evaluation-wrapper">
          <text>商品评价（{{detailData.productEvaluation.entiretyScore}}）</text>
          <view class="detail-goods-star-wrapper">
            <view wx:for="{{goodsStar}}" wx:key="index">
              <image wx:if="{{index + 1 > detailData.productEvaluation.entiretyLevel}}" src='../images/star-gray.png' class="detail-goods-style"  />
                <image wx:else src='../images/star-red.png' class="detail-goods-style"  />
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="detail-brand">
    <view class="detail-brand-item">
      <text>品名：</text>
      <text>{{detailData.majorName}}</text>
    </view>
    <view class="detail-brand-item">
      <text>品牌：</text>
      <text>{{detailData.brand}}</text>
    </view>
    <view class="detail-brand-item">
      <text>规格：</text>
      <text>{{detailData.spec}}</text>
    </view>
    <view class="detail-brand-item">
      <text>产地：</text>
      <text>{{detailData.originPlace}}</text>
    </view>
  </view>
  <view class="detail-image-wrapper">
    <block wx:for="{{detailData.detailPhotoAddress}}" wx:key="index">
      <image lazy-load="true" src="{{item}}" class="detail-image-item" mode="widthFix"></image>
    </block>
    <view class="detail-zhangheng"></view>
  </view>
  <view class="detail-bottom">
    <view wx:if="{{identity === 2 && !showBuy}}" class="detail-bottom-left" catchtap="showMakeTaskPoup">做任务</view>
    <view wx:else class="detail-bottom-left" catchtap="immediateSpellGroup">购买</view>
    <!-- <view class="detail-bottom-right" catchtap="useCouponsSpellGroup">用劵拼团</view> -->
  </view>
  <!-- <luckBag></luckBag> -->
  <dialog showDialog="{{showDialog}}"></dialog>
</view>
