.detail-time {
  width: 396rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #101010;
  line-height: 44rpx;
  margin: 24rpx auto 0;
}
.detail-time-num {
  display: inline-block;
  width: 60rpx;
  height: 48rpx;
  background: #333333;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 48rpx;
  text-align: center;
}
.detail-time-text1 {
  margin-right: 12rpx;
}
.detail-time-text2 {
  margin-left: 12rpx;
}
.detail-time-mh {
  margin: 0 8rpx;
}
.detail-brand {
  height: 200rpx;
  background: #FFFFFF;
  margin-top: 16rpx;
  padding: 32rpx 44rpx;
}
.detail-brand-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.detail-brand-item text:nth-child(1) {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #333333;
  line-height: 28rpx;
}
.detail-brand-item text:nth-child(2) {
  font-size: 20rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #333333;
  line-height: 28rpx;
}
.detail-image-wrapper {
  margin-top: 16rpx;
  margin-bottom: 170rpx;
}
.detail-image-item {
  border: none;
  width: 750rpx;
  display: block;
  margin-top: -2rpx;
}
.detail-bottom {
  display: flex;
  height: 170rpx;
  width: 750rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  justify-content: center;
}
.detail-bottom-left {
  width: 320rpx;
  height: 88rpx;
  background: linear-gradient(86deg, #FF706B 0%, #F8052B 100%);
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(255, 57, 57, 0.5);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  margin-right: 30rpx;
  margin-top: 16rpx;
}
.detail-bottom-right {
  width: 320rpx;
  height: 88rpx;
  background: linear-gradient(86deg, #FEAA32 0%, #FE8732 100%);
  box-shadow: 0rpx 8rpx 16rpx 0rpx #FFC399;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
  margin-top: 16rpx;
}
.goods-item-red-icon {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin: 4rpx;
}
.goods-item-right-red {
  display: flex;
  align-items: center;
  /* margin-top: 8rpx; */
  justify-content: flex-end;
