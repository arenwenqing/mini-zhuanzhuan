/* pages/detail/detail.wxss */
.detail-wrapper .detail-top-bar .weui-navigation-bar__center text {
  width: 380rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
 -webkit-box-orient: vertical;
}
.detail-wrapper {
  background: #F7F7F7;
}
.detail-main-image-wrapper {
  background: #fff;
}
.detail-image-carousel {
  width: 750rpx;
  height: 750rpx;
}
.detail-main-image {
  display: inline-block;
  width: 750rpx;
  height: 750rpx;
}
.detail-name-price-wrapper {
  height: 400rpx;
  background: #fff;
}
.detai-name-price-content {
  padding: 24rpx 34rpx 32rpx 24rpx;
}
.detail-price text:nth-child(1) {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FF0C00;
  line-height: 44rpx;
  margin-right: 4rpx;
}
.detail-price text:nth-child(2) {
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FF0C00;
  line-height: 66prx;
}
.detail-main-title {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #262424;
  line-height: 44rpx;
}
.detail-subtitle-title {
  width: 380rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
 -webkit-box-orient: vertical;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #666666;
  line-height: 34rpx;
  margin: 8rpx 0 12rpx 0rpx
}
.detail-num {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #333333;
  line-height: 28rpx;
}
.detail-num-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
}
.detail-num-content text {
  /* margin-right: 248rpx; */
  margin-bottom: 8rpx;
}
