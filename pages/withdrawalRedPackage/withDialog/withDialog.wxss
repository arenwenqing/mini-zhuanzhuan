/* pages/components/dialog/dialog.wxss */
.mask {
  position: fixed;
  display: flex;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 5000;
  justify-content: center;
  align-items: center;
}
.dialog-content {
  position: relative;
  height: 570rpx;
  width: 640rpx;
  border-radius: 16rpx;
  background-color: #fff;
}
.dialog-content-bottom {
  position: absolute;
  display: flex;
  width: 640rpx;
  height: 100rpx;
  bottom: 0;
  justify-content: center;
  border-top: 1rpx solid #eee;
}
.dialog-content-main {
  width: 544rpx;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #353535;
  line-height: 48rpx;
  text-align: center;
  margin: 60rpx 48rpx 0 48rpx;
}
.dialog-btn-style {
  border: none !important;
  height: 100rpx !important;
  line-height: 70rpx !important;
}
.dialog-btn-style-fenge {
  height: 100rpx;
  width: 1rpx;
  background-color: #eee;
}
.with-input-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  /* margin-top: 121rpx; */
}
.input-title {
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #353535;
  margin-right: 24rpx;
}
.with-dialog-input {
  width: 280rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 1rpx solid #DBDBDB;
  padding-left: 20rpx;
}
.with-input-placeholder {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #B1B1B1;
}
.with-dialog-drawer-tip {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 32rpx;
}
.with-dialog-drawer-tip view {
  margin-bottom: 8rpx;
}
.dialog-with-drawer-fail {
  display: flex;
  justify-content: center;
  /* position: absolute; */
  width: 544rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FA2840;
  margin: 30rpx auto 0;
  /* left: 50%;
  margin-left: -272rpx;
  top: 128rpx; */
}