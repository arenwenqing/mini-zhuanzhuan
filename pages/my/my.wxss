/* pages/my/my.wxss */
.my-page-navigation {
  z-index: 333;
  position: relative;
}
.my-top-wrapper {
  height: 240rpx;
  background: linear-gradient(86deg, #FF706B 0%, #F8052B 100%);
}
.my-wrapper {
  background: #F7F7F7;
}
.my-user-message {
  width: 750rpx;
  height: 902rpx;
  background: #F7F7F7;
  border-radius: 48px 48px 0px 0px;
  /* margin-top: -88rpx; */
  /* position: relative; */
}
.my-user-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(234,234,234, 0.2);
  box-shadow: 0px 26px 28px 0px rgba(134, 134, 134, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx 24rpx 28rpx;
}
.my-user-avatar-img {
  display: inline-block;
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
}
.my-user-name {
  width: 426rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 32rpx;
  margin: 40rpx auto 0;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.my-user-tuan-num {
  display: block;
  width: 168rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5F5F5F;
  line-height: 32rpx;
  margin: 0 auto;
  text-align: center;
}
.my-user-item-wrapper {
  position: relative;
  margin: 36rpx auto 0;
}
.my-user-quan-tip {
  position: absolute;
  width: 686rpx;
  height: 290rpx;
  background: #EE7100;
  border-radius: 8rpx;
  left: 50%;
  margin-left: -343rpx;
  top: -290rpx;
}
.my-user-quan-tip-triangle {
  display: inline-block;
  position: absolute;
  width: 14rpx;
  height: 8rpx;
  bottom: -4px;
  left: 207rpx;
}
.my-user-item {
  height: 96rpx;
  border-bottom: 1rpx solid #E6E6E6;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.my-user-item-icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
  margin-left: 32rpx;
  vertical-align: middle;
}
.my-user-item-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 32rpx;
}
.my-user-item-more {
  display: inline-block;
  height: 24rpx;
  width: 24rpx;
  margin-right: 32rpx;
}
.my-user-item-redtip {
  display: inline-block;
  height: 24rpx;
  width: 24rpx;
  vertical-align: middle;
  margin-left: 6rpx;
}
.my-user-item-dobule-red-num {
  display: inline-block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 32rpx;
  margin-right: 32rpx;
}
.my-user-quan-tip-wrapper {
  margin: 24rpx 22rpx 20rpx 16rpx;
}
.my-user-quan-text {
  display: block;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 34rpx;
  margin-bottom: 30rpx;
}
.my-user-quan-text2 {
  display: block;
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 32rpx;
  text-align: center;
}
.my-user-quan-guanbi {
  position: absolute;
  display: inline-block;
  width: 52rpx;
  height: 52rpx;
  right: -22rpx;
  top: -28rpx;
}
.my-header {
  height: 164rpx;
  background: linear-gradient(86deg, #FF625C 0%, #F40026 100%);
}
.my-header-content {
  display: flex;
}
.my-header-list-wrapper {
  height: 188rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  position: relative;
  top: -20rpx;
}
.list-wrapper-swiper {
  height: 188rpx;
}
.my-swiper-item {
  display: flex;
  justify-content: center;
}
.my-swiper-item2 {
  justify-content: flex-start;
}
.list-item {
  width: 142rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.list-item::after {
  content: '';
  height: 72rpx;
  width: 1rpx;
  background: #E6E6E6;
  position: absolute;
  left: 140rpx;
  top: 50rpx;
}
.list-item:last-child::after {
  content: '';
  height: 0rpx;
  width: 0rpx;
}
.list-item image {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-top: -20rpx;
}
.list-item text {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 24rpx;
  margin-top: 20rpx;
}
/*用来包裹所有的小圆点  */
.dots{  
  width: 156rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 50%;
  margin-left: -78rpx;
  justify-content: center;
  bottom: 24rpx;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 8rpx;  
  height: 8rpx;   
  border-radius: 50%;
  margin-right: 8rpx;
  background-color: #FFB5A3;
}  
/*选中以后的小圆点样式  */
.active{  
  width: 8rpx;   
  height: 8rpx;
  background-color: #FA2840;
}